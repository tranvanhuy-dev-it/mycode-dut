CXX = g++
CXXFLAGS = -g -I./src/Include -I./src/Entity -I./src/Map -I./src/UI -I./src/UX
SRC = src/*.cpp src/Entity/*.cpp src/Include/*.cpp src/Map/*.cpp src/UI/*.cpp
TARGET = myprogram
LIBS = -lsfml-graphics -lsfml-window -lsfml-system -lsfml-audio

all: $(TARGET)

$(TARGET):
	$(CXX) $(CXXFLAGS) $(SRC) -o $@ $(LIBS)

run: $(TARGET)
	./$(TARGET)

clean:
	rm -f $(TARGET)

.PHONY: all run clean
